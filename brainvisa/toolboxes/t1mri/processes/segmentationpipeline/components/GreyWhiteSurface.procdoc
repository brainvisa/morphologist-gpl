      <xhtml name="right_hemi_cortex"/>
      <xhtml name="right_grey_white">classification (grey=100,white=200)</xhtml>
      <xhtml name="left_white_mesh"><img SRC="../../images/III_white.jpg" ALT=""/></xhtml>
      <xhtml name="left_hemi_cortex"><img SRC="../../images/II_cortex.jpg" ALT=""/></xhtml>
